<div class=" profile">
  <div class="row-fluid">
      <div class="col-sm-4 col-md-4 col-md-offset-3 user-details">
        <div class="user-image">
      <%= gravatar_tag @user.email, size: 100, secure: true, html: {class: 'img-circle', title: @user.full_name} %>
    </div>
      <div class="user-info-block">
        <div class="user-heading">
          <h3><%= @user.full_name %></h3>
          <span class="help-block">I made <%= @user.orders.count %> purchases</span>
        </div>
        <ul class="navigation">
          <li class="active">
            <a href="#information" data-toggle="tab">
              <span class="glyphicon glyphicon-user"></span>
            </a>
          </li>
          <li>
            <a href="#settings" data-toggle="tab">
              <span class="glyphicon glyphicon-cog"></span>
            </a>
          </li>
          <li>
            <a href="#history" data-toggle="tab">
              <span class="glyphicon glyphicon-list-alt"></span>
            </a>
          </li>
          <li>
            <a href="#help" data-toggle="tab">
              <span class="glyphicon glyphicon-question-sign"></span>
            </a>
          </li>
        </ul>
        <div class="user-body">
          <div class="tab-content">
            <div id="information" class="tab-pane active">
              <%= render 'account_info' %>
            </div>
            <div id="settings" class="tab-pane">
              <%= render 'edit_info_form' %>
            </div>
            <div id="history" class="tab-pane">
              <h4>Purchase History</h4><hr><br>
              <table>
                <tbody>
                  <tr>
                    <td>You haven't made any purchases yet.</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div id="help" class="tab-pane user-edit-info">
              <h4>Ask a Question</h4><hr><br>
              <form role="form">
                  <div class="form-group float-label-control label-top">
                      <label for="">Your question...</label>
                      <textarea class="form-control" placeholder="Your question..." rows="3"></textarea>
                  </div>
                  <button class="btn btn-primary btn-block">
                    Send <span class="glyphicon glyphicon-send"> </span>
                  </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
