<div class="devise-forms">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin well' }) do |f| %>
  <h2 class="text-center">Forgot your password?</h2>
  <%= f.error_notification %>

    <%= f.input :email, placeholder: "Email", required: true, autofocus: true, label: false, input_html: { class: "form-control" } %>

    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %>
	<%= render "devise/shared/links" %>
<% end %>
</div>
