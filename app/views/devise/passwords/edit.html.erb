<div class="devise-forms">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                              html: { method: :put, class: "form-signin" }) do |f| %>
  <h2 class="text-center">Change your password</h2>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

    <%= f.input :password, placeholder: "New password", required: true, autofocus: true, label: false, input_html: { class: "form-control" } %>
    <%= f.input :password_confirmation, placeholder: "Confirm your new password", required: true, label: false, input_html: { class: "form-control" } %>

    <%= f.button :submit, "Change my password", class: "btn btn-primary btn-block" %>
    <%= render "devise/shared/links" %>
<% end %>
</div>
