<div class="devise-forms">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
  <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>
  <%= f.error_notification %>

    <%= f.input :first_name, placeholder: "First name", required: true, autofocus: true, label: false, input_html: { class: "form-control" } %>
    <%= f.input :last_name, placeholder: "Last name", required: true, autofocus: true, label: false, input_html: { class: "form-control" } %>
    <%= f.input :email, placeholder: "Email", required: true, autofocus: true, label: false, input_html: { class: "form-control" } %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :phone, placeholder: "phone", autofocus: true, label: false, input_html: { class: "form-control" } %>
    <%= f.input :address, placeholder: "address", autofocus: true, label: false, input_html: { class: "form-control" } %>

    <%= f.input :password, placeholder: "New password", autocomplete: "off",
                           hint: "leave it blank if you don't want to change it", required: false, label: false, input_html: { class: "form-control" } %>
    <%= f.input :password_confirmation, placeholder: "Confirm password", required: false, label: false, input_html: { class: "form-control" } %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: false, input_html: { class: "form-control" } %>

    <%= f.button :submit, "Update", class: "btn btn-primary btn-block" %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
<% end %>
</div>
