
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin well' }) do |f| %>
    <h2 class="text-center">Sign Up</h2>
    <%= f.error_notification %>
    <%= devise_error_messages! %>
    <%= f.input :first_name, placeholder: "First name", required: true, autofocus: true, label: false, input_html: { class: 'form-control' } %>
    <%= f.input :last_name, placeholder: "Last name", required: true, label: false, input_html: { class: 'form-control' } %>
    <%= f.input :email, placeholder: "Email", required: true, label: false, input_html: { class: 'form-control' } %>
    <%= f.input :phone, placeholder: "phone", label: false, input_html: { class: 'form-control' } %>
    <%= f.input :address, placeholder: "address", label: false, input_html: { class: 'form-control' } %>
    <%= f.input :password, placeholder: "New password", required: true, label: false, input_html: { class: 'form-control' } %>
    <%= f.input :password_confirmation, placeholder: "Confirm password", required: true, label: false, input_html: { class: 'form-control' } %>

    <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-block' %>
    <%= render "devise/shared/links" %>
<% end %>
